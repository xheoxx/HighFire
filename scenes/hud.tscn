[gd_scene load_steps=1 format=3 uid="uid://hud_tscn"]

; =============================================================================
; hud.tscn – HUD-Canvas fuer alle 4 Spieler
; Wird als Child im CanvasLayer der main_arena.tscn eingebunden.
;
; AUFBAU:
;   Control (Root, volle Bildschirmgroesse)
;     ├── P1HUD  (oben links)
;     ├── P2HUD  (oben rechts)
;     ├── P3HUD  (unten links)  – spaeter aktiv bei 3/4-Spieler
;     └── P4HUD  (unten rechts) – spaeter aktiv bei 4-Spieler
;
; Jeder Spieler-HUD-Block ist ein VBoxContainer mit:
;   - HP-Label (Text-Platzhalter bis Phase 3 Stream C health_bar.tscn eingebaut wird)
;   - Waffen-Label (Platzhalter)
;
; Phase 3 Stream C ersetzt diese Platzhalter durch echte HUD-Komponenten.
; =============================================================================

[node name="HUD" type="Control"]
; Volle Bildschirmgroesse (1920x1080)
layout_mode = 3
anchors_preset = 15
anchor_right = 1.0
anchor_bottom = 1.0
grow_horizontal = 2
grow_vertical = 2

; --- Spieler 1 HUD (oben links) ---
[node name="P1HUD" type="VBoxContainer" parent="."]
layout_mode = 1
anchor_left = 0.0
anchor_top = 0.0
anchor_right = 0.0
anchor_bottom = 0.0
offset_left = 20.0
offset_top = 20.0
offset_right = 220.0
offset_bottom = 100.0

[node name="P1NameLabel" type="Label" parent="P1HUD"]
text = "Spieler 1"
; Cyan-Farbe fuer Spieler 1 (#00D4FF)
modulate = Color(0.0, 0.831, 1.0, 1.0)

[node name="P1HPLabel" type="Label" parent="P1HUD"]
text = "HP: 100"
modulate = Color(1.0, 1.0, 1.0, 0.9)

[node name="P1WeaponLabel" type="Label" parent="P1HUD"]
text = "Waffe: –"
modulate = Color(1.0, 1.0, 1.0, 0.7)

