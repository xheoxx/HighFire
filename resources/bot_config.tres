; --- Standard-Schwierigkeit fuer neue Spiele ---
default_difficulty = "normal"

; --- Target-Auswahl-Strategie ---
; "nearest" = Naechster Spieler
; "lowest_hp" = Spieler mit niedrigstem HP
; "combo" = Erst niedrigstes HP, dann naechster bei Gleichstand
bot_target_strategy = "combo"

; --- Entscheidungs-Zustand-Machine-States ---
; Wird von bot_controller.gd als Enum-Referenz genutzt.
; Reihenfolge: IDLE -> APPROACH -> ATTACK -> DODGE -> RETREAT
bot_states = ["IDLE", "APPROACH", "ATTACK", "DODGE", "RETREAT"]

; --- LOS-Check vor Angriff ---
; Wenn true: Bot prueft Line-of-Sight zum Ziel vor jedem Angriff.
bot_use_los_check = true
